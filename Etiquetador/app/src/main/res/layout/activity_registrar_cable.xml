<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registrar_cable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/blue"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.trimble.etiquetador.RegistrarCable">

    <TextView
        android:text="Código poste:"
        android:typeface="monospace"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/textView7" />

    <TextView
        android:text="TextView"
        android:typeface="monospace"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewposteid"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:typeface="monospace"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="Tag ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="TextView"
        android:typeface="monospace"
        android:textSize="15sp"
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewtagidcable"
        android:layout_alignParentRight="true"
        />

    <CheckBox
        android:typeface="monospace"
        android:text="¿Es equipo?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCable"
        android:layout_marginTop="20dp"
        android:layout_below="@id/viewtagidcable"
        android:layout_alignParentRight="true" />

    <TextView
        android:text="Operadora:"
        android:typeface="monospace"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_marginTop="140dp"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerOperadora"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="135dp"
        android:layout_alignParentRight="true"
         />

    <TextView
        android:text="Tipo:"
        android:typeface="monospace"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/spinnerOperadora"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTipo"
        android:layout_below="@id/spinnerOperadora"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"
        />

    <EditText
        android:text=""
        android:id="@+id/viewdimension"
        android:visibility="gone"
        android:inputType="textPersonName"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/spinnerOperadora"
        android:ems="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text=""
        android:visibility="invisible"
        android:typeface="monospace"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/spinnerTipo"
        android:layout_alignParentLeft="true" />

    <EditText
        android:text=""
        android:id="@+id/numberofitems"
        android:visibility="invisible"
        android:inputType="number"
        android:layout_marginTop="27dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/spinnerTipo"
        android:layout_toRightOf="@id/textView17"
        android:ems="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageButton
        android:background="@drawable/save96"
        android:onClick="modificarCable"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/modificar"
        android:layout_marginTop="340dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Guardar"
        android:typeface="monospace"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_below="@+id/modificar"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
